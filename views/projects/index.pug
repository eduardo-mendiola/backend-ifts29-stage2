extends ../layout.pug
//- views/project/index.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-0 Lista de Proyectos
    if hasPermission('create_projects')
      a.btn.btn-primary(href="/projects/new") Nuevo Proyecto

  //- Incluir barra de búsqueda, modal y JS común
  include ../partials/common-table-scripts.pug

  table.table.table-hover.table-dark.table-index
    thead
      tr
        th №
        th Código
        th Nombre de Proyecto 
        th Cliente
        th status
        th.text-end.pe-5 Acciones
    tbody
      each item, index in items
        tr(data-id=item.id, data-code=`${item.code}` ,data-textmodal1=`Nombre de proyecto: ${item.name}`)
          td= index + 1
          td= item.code
          td= item.name
          td= item.client_id.name
          td= statusLabels[item.status]
          td.text-end
            a.btn.btn-gray.btn-sm.me-2(href=`/projects/${item.id}`) Ver
            if hasPermission('edit_projects')
              a.btn.btn-gray.btn-sm.me-2(href=`/projects/${item.id}/edit`) Editar
            if hasPermission('delete_projects')
              form(action=`/api/projects/${item.id}?_method=DELETE`, method="POST", style="display:inline;")
                input(type="hidden", name="_method", value="DELETE")
                button.btn.btn-danger-soft.btn-sm.delete-btn(data-id=item.id) Eliminar