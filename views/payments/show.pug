extends ../layout.pug
//- views/payments/show.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-4 Detalles del Cobro: #{item.code}
    a.btn.btn-gray(href="/payments", tabindex="1") Volver
 
  h3.mt-4 Detalles del Cobro
  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Código
        td= item.code
      tr
        th Código de Transacción
        td= item.transaction_id
      tr 
        th Moneda 
        td= currency_labels[item.currency] 
      tr 
        th Monto
        td $#{item.amount.toFixed(2)}
      tr
        th Fecha
        td= item.payment_date 
      tr 
        th Método de Pago
        td= payment_method_labels[item.payment_method]
      tr 
        th Descripción
        td= item.description || 'N/A'
      tr 
        th Estado
        td= status_labels[item.status]
      tr
        th Fecha de Creación
        td= item.created_at
      tr
        th Fecha de Modificación
        td= item.updated_at
  
  h3.mt-4 Detalles de la Factura Asociada
  table.table.table-dark
    tbody
      tr
        th Número de Factura
        td= item.invoice_number
      tr
        th Monto Total de la Factura
        td $#{item.amount.toFixed(2)}
  
  

  .mt-3
    a.btn.btn-gray.me-2(href="/payments", tabindex="2") Volver a la lista
