extends ../layout.pug
//- views/team/show.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-4 Equipo: #{item.name}
    a.btn.btn-gray(href="/teams", tabindex="1") Volver
 

  table.table.table-dark
    tbody
      tr 
        th ID
        td= item.id
      tr
        th Código
        td= item.code
      tr
        th Nombre
        td= item.name
      tr
        th Descripción
        td= item.description
      tr
        th Lider de Equipo
        td= item.team_leader.first_name + " " + item.team_leader.last_name
      tr
        th Miembros
        td
          if item.members && item.members.length > 0
            ul
              each member in item.members
                li= member.user_id.first_name + " " + member.user_id.last_name + " (" + member.team_role_id.name + ")"
          else
            span.text-muted Sin miembros
      tr
        th Fecha de Creación
        td= item.created_at ? item.created_at.toLocaleDateString() : 'N/A'
      tr
        th Última Actualización
        td= item.updated_at ? item.updated_at.toLocaleDateString() : 'N/A'

  .mt-3
    a.btn.btn-gray.me-2(href="/teams", tabindex="2") Volver a la lista
    a.btn.btn-primary.me-2(href=`/teams/${item.id}/edit`, tabindex="3") Editar
