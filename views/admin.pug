extends layout.pug

block content
  .d-flex.flex-column.justify-content-start.align-items-center.min-vh-100.mt-5

    // Mostrar información del usuario
    if user
      .w-50.text-center.mb-5
        h2.mb-2(style="color: #ffffff; font-weight: 700;")
          | Bienvenido, #{user.employee && user.employee.first_name ? user.employee.first_name + ' ' + user.employee.last_name : user.username}!

        h3(style="color: #d3d3d3ff; font-weight: 600;")
          | Rol: #{user.role_id ? user.role_id.name : 'Usuario'}

    img.fs-2.me-2.mb-3.mt-5(src="/images/nexusflow_logo.png" alt="Logo" width="400px" height="90px" style="height:90px; width:auto;")

    p.lead.text-center.mb-5 La aplicación para gestionar tus proyectos
    
    .d-flex.gap-3.mt-5.flex-wrap.justify-content-center
      if hasPermission('view_employees') 
        a.btn.btn-gray.btn-lg(href="/employees") Ir a Empleados
      if hasPermission('view_projects') 
        a.btn.btn-gray.btn-lg(href="/projects") Ir a Proyectos
      if hasPermission('view_clients')
        a.btn.btn-gray.btn-lg(href="/clients") Ir a Clientes
      if hasPermission('view_invoices')
        a.btn.btn-gray.btn-lg(href="/invoices") Ir a Facturas
