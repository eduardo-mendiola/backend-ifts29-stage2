extends ../layout.pug
//- views/expense-categories/index.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-0 Lista de Categorías de Gastos
    a.btn.btn-primary(href="/expense-categories/new") Nuevo Area

  //- Incluir barra de búsqueda, modal y JS común
  include ../partials/common-table-scripts.pug

  table.table.table-hover.table-dark.table-index
    thead
      tr
        th №
        th Código
        th Nombre
        th.text-end.pe-5 Acciones
    tbody
      each item, index in items
        tr(data-id=item.id, data-name=`${item.name}`, data-code=`${item.code}`, data-textmodal1=`Nombre: ${item.name}`)
          td= index + 1
          td= item.code
          td= item.name
          td.text-end
            a.btn.btn-gray.btn-sm.me-2(href=`/expense-categories/${item.id}`) Ver
            if hasPermission('edit_expense_categories')
              a.btn.btn-gray.btn-sm.me-2(href=`/expense-categories/${item.id}/edit`) Editar
            if hasPermission('delete_expense_categories')
              form(action=`/api/expense-categories/${item.id}?_method=DELETE`, method="POST", style="display:inline;")
                input(type="hidden", name="_method", value="DELETE")
                button.btn.btn-danger-soft.btn-sm.delete-btn(data-id=item.id) Eliminar

  