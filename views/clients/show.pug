extends ../layout.pug
//- views/client/show.pug
block content
  h1.mb-4 Cliente: #{item.name} 

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr 
        th Código
        td= item.code
      tr
        th Nombre
        td= item.name
      tr
        th Contacto
        td= item.contact_name
      tr
        th Email
        td= item.email
      tr
        th Teléfono
        td= item.phone
      tr
        th Dirección
        td= item.address
      tr
        th Estado
        td= item.is_active ? 'Activo' : 'Inactivo'
      tr
        th Fecha de creación
        td= item.created_at
      tr
        th Última actualización
        td= item.updated_at

  .mt-3
    a.btn.btn-gray.me-2(href="/clients") Volver a la lista
    a.btn.btn-primary.me-2(href=`/clients/${item.id}/edit`) Editar
