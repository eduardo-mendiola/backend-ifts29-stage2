extends ../layout.pug
//- views/clients/show.pug
block content
  h1.mb-4 Cliente: #{item.name || (item.first_name + ' ' + item.last_name)}

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Código
        td= item.code
      tr
        th Tipo de Cliente
        td= item.client_type || '—'
      tr
        th Nombre / Empresa
        td= item.name || '—'
      tr
        th Nombre (persona)
        td= item.first_name || '—'
      tr
        th Apellido (persona)
        td= item.last_name || '—'
      tr
        th Tipo de documento
        td= item.id_type || '—'
      tr
        th Número de documento
        td= item.id_number || '—'
      tr
        th Categoría
        td= item.category || '—'
      tr
        th Tipo de empresa
        td= item.company_type || '—'
      tr
        th Sitio web
        td= item.website || '—'
      tr
        th Contacto
        td= item.contact_name || '—'
      tr
        th Teléfono
        td= item.phone || '—'
      tr
        th Dirección - Calle
        td= (item.address && item.address.street) || '—'
      tr
        th Dirección - Ciudad
        td= (item.address && item.address.city) || '—'
      tr
        th Dirección - Estado / Provincia
        td= (item.address && item.address.state) || '—'
      tr
        th Dirección - Código postal
        td= (item.address && item.address.postal_code) || '—'
      tr
        th Dirección - País
        td= (item.address && item.address.country) || '—'
      tr
        th Código país
        td= (item.address && item.address.country_code) || '—'
      tr
        th Email de facturación
        td= (item.billing_info && item.billing_info.email) || '—'
      tr
        th Términos de pago
        td= (item.billing_info && item.billing_info.payment_terms) || '—'
      tr
        th Moneda
        td= (item.billing_info && item.billing_info.currency) || '—'
      tr
        th Estado
        td= item.is_active ? 'Activo' : 'Inactivo'
      tr
        th Fecha de creación
        td= item.created_at
      tr
        th Última actualización
        td= item.updated_at

  //- Bloque opcional para mostrar contactos asociados
  if item.contacts && item.contacts.length
    h3.mt-4 Contactos asociados
    table.table.table-dark
      thead
        tr
          th Código
          th Nombre
          th Email
          th Teléfono
          th Celular
          th Tipo
      tbody
        each contact in item.contacts
          tr
            td= contact.code
            td= contact.full_name
            td= contact.email
            td= contact.phone
            td= contact.mobile
            td= contact.is_primary ? 'Principal' : 'Secundario'

  .mt-3
    a.btn.btn-gray.me-2(href="/clients") Volver a la lista
    a.btn.btn-primary.me-2(href=`/clients/${item.id}/edit`) Editar
