extends ../layout.pug
//- views/role/index.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-0 Lista de Roles
    if hasPermission('create_roles')
      a.btn.btn-primary(href="/roles/new") Nuevo Rol

  //- Incluir barra de búsqueda, modal y JS común
  include ../partials/common-table-scripts.pug

  table.table.table-hover.table-dark.table-index
    thead
      tr
        th №
        th Código
        th Nombre
        th.text-end.pe-5 Acciones
    tbody
      each item, index in items
        tr(data-id=item.id, data-code=item.code, data-textmodal1=`Nombre: ${item.name}`)
          td= index + 1
          td= item.code
          td= item.name
          td.text-end
            a.btn.btn-gray.btn-sm.me-2(href=`/roles/${item.id}`) Ver
            a.btn.btn-gray.btn-sm.me-2(href=`/roles/${item.id}/edit`) Editar
            form(action=`/api/roles/${item.id}?_method=DELETE`, method="POST", style="display:inline;")
              input(type="hidden", name="_method", value="DELETE")
              button.btn.btn-danger-soft.btn-sm.delete-btn(data-id=item.id) Eliminar
