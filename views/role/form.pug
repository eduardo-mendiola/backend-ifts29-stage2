extends ../layout.pug
//- views/role/form.pug
block content
  .d-flex.justify-content-center
    form.bg-dark.text-white.p-4.rounded.shadow(action=item && item.id ? `/roles/${item.id}?_method=PUT` : "/roles", method="POST", style="width:100%; max-width:1200px; max-height:100vh; overflow-y:auto;")
      .d-flex.justify-content-between.align-items-center.mb-3
        h1.mb-0 #{item && item.id ? 'Editar Rol' : 'Crear Nuevo Rol'}
        a.btn.btn-gray(href="/roles") Volver a la lista

      // Contenedor de 1 columnas
      .row.g-3
        .col-md-6
          .mb-3
            label.form-label(for="name") Nombre
            input#name.form-control(type="text", name="name", value=item.name || "", required)
          .mb-3
            label.form-label(for="description") Descripci√≥n
            textarea#description.form-control(name="description", value=item.description || "", required)

      button.btn.btn-primary.mt-3(type="submit") #{item && item.id ? 'Actualizar Rol' : 'Crear Rol'}
