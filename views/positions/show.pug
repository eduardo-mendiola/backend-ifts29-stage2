extends ../layout.pug
//- views/area/show.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-4 Cargo: #{ item.name }
    a.btn.btn-gray(href="/positions", tabindex="1") Volver

 

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Código
        td= item.code
      tr
        th Nombre
        td= item.name
      tr
        th Descripción
        td= item.description

  .mt-3
    a.btn.btn-gray.me-2(href="/positions", tabindex="2") Volver a la lista
    a.btn.btn-primary.me-2(href=`/positions/${item.id}/edit`, tabindex="3") Editar
