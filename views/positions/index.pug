extends ../layout.pug
//- views/positions/index.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-0 Lista de Cargos (Posiciones)
    if hasPermission('create_positions')
      a.btn.btn-primary(href="/positions/new") Nuevo Area

  //- Incluir barra de búsqueda, modal y JS común
  include ../partials/common-table-scripts.pug

  table.table.table-hover.table-dark.table-index
    thead
      tr
        th №
        th Código
        th Nombre
        th.text-end.pe-5 Acciones
    tbody
      each item, index in items
        tr(data-id=item.id, data-name=`${item.name}`, data-code=`${item.code}`, data-textmodal1=`Nombre: ${item.name}`)
          td= index + 1
          td= item.code
          td= item.name
          td.text-end
            a.btn.btn-gray.btn-sm.me-2(href=`/positions/${item.id}`) Ver
            if hasPermission('edit_positions')
              a.btn.btn-gray.btn-sm.me-2(href=`/positions/${item.id}/edit`) Editar
            if hasPermission('delete_positions')
              form(action=`/api/positions/${item.id}?_method=DELETE`, method="POST", style="display:inline;")
                input(type="hidden", name="_method", value="DELETE")
                button.btn.btn-danger-soft.btn-sm.delete-btn(data-id=item.id) Eliminar

  