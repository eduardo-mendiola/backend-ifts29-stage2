extends ../layout.pug
//- views/task/show.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1.mb-4 Presupuesto Código: #{item.code}
    a.btn.btn-gray(href="/estimates", tabindex="1") Volver
 

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Código
        td= item.code
      tr
        th Título
        td= item.title
      tr
        th Cliente
        td= (item.project_id && item.project_id.client_id) ? `${item.clientName} - Código: ${item.clientCode}` : 'N/A'
      tr
        th Proyecto
        td= item.project_id.name
      tr
        th Descripción
        td= item.description
      tr 
        th Monto Total
        td $#{item.total_amount.toFixed(2)}
      tr 
        th Estado
        td= statusLabels[item.status] || 'N/A'
      tr
        th Días de Validez
        td= item.validity_days + ' días'
      tr 
        th Fecha de Validez
        td= item.valid_until   
      tr
        th Fecha de Creación
        td= item.created_at
      tr
        th Fecha de Modificación
        td= item.updated_at
      

  .mt-3
    a.btn.btn-gray.me-2(href="/estimates", tabindex="2") Volver a la lista
    a.btn.btn-primary.me-2(href=`/estimates/${item.id}/edit`, tabindex="3") Editar
