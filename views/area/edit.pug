extends ../layout.pug
//- views/role/edit.pug
block content
  .d-flex.justify-content-center
    form.bg-dark.text-white.p-4.rounded.shadow(action=`/roles/${item.id}?_method=PUT`, method="POST", style="width:100%; max-width:1200px; max-height:100vh; overflow-y:auto;")
      .d-flex.justify-content-between.align-items-center.mb-3
        h1.mb-0 Editar Rol
        a.btn.btn-gray(href="/roles") Volver a la lista

      // Contenedor de 1 columnas
      .row.g-3
        // Columna izquierda
        .col-md-6
          .mb-3
            label.form-label(for="name") Nombre
            input#first_name.form-control(type="text", name="name", value=item.name || "", required)
          .mb-3
            label.form-label(for="description") Descripci√≥n
            textarea#description.form-control(name="description" || "", required).value=item.description

      button.btn.btn-success.mt-3(type="submit") Actualizar Rol
