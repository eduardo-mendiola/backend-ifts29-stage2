      }
      .btn-danger-soft {
        background-color: #a94442;
        color: #fff;
      }
      .btn-danger-soft:hover {
        background-color: #843534;
        color: #fff;
      }
      table {
        background-color: #1e1e1e;
      }
      .sidebar {
        width: 180px;
        height: 100vh;
        position: sticky;
        top: 0;
      }
      main.flex-grow-1 {
        height: calc(100vh - 56px - 48px); /* altura de barra superior + tabs */
        overflow-y: auto; /* scroll vertical si es necesario */
      }

      /* Estilo general de tablas: neutro para todas */
      .table {
        width: 100%;
        background-color: #1e1e1e;
        table-layout: auto;
        word-wrap: break-word;
      }

      /* Estilos específicos para tablas tipo índice/lista */
      .table-index td:first-child,
      .table-index th:first-child {
        width: auto;
        white-space: nowrap; 
        text-align: center;  
      }

      .table-index td:last-child,
      .table-index th:last-child {
        width: 20%;
        white-space: nowrap; 
        text-align: right;
      }

      .table-index .btn {
        display: inline-block;
        margin-bottom: 4px;
      }

      /* Cambiar color del borde al enfocar inputs */
      input:focus, textarea:focus, select:focus {
        border-color: #2db96eff !important; /* Amarillo */
        box-shadow: 0 0 0 0.2rem rgba(171, 255, 189, 1) !important; /* Resplandor amarillo */
        outline: none !important;
      }

