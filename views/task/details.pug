extends ../layout.pug
//- views/task/details.pug
block content
  h1.mb-4 Título de tarea: #{ item.getFullInfo ? item.getFullInfo() : item.title }

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Título
        td= item.title
      tr
        th Proyecto
        td= item.project_id.name
      tr
        th Descripción
        td= item.description
      tr
        th Estado
        td= item.status
      tr
        th Asignado a
        td= item.assigned_to.first_name + " " + item.assigned_to.last_name
      tr
        th Estimación (horas)
        td= item.estimated_hours
      tr
        th Fecha de Vencimiento
        td= item.due_date ? item.due_date.toLocaleDateString() : 'N/A'
      tr
        th Fecha de Creación
        td= item.created_at
      

  .mt-3
    a.btn.btn-gray.me-2(href="/tasks") Volver a la lista
