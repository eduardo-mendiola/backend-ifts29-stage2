extends ../layout.pug

block content
  h1.mb-4 Usuario del sistema: #{ item.getFullName ? item.getFullName() : `${item.first_name} ${item.last_name}` }

  table.table.table-dark
    tbody
      tr
        th ID
        td= item.id
      tr
        th Nombre
        td= item.first_name
      tr
        th Apellido
        td= item.last_name
      tr
        th Email
        td= item.email
      tr
        th Teléfono
        td= item.phone
      tr
        th Rol ID
        td= item.role_id.name
      tr
        th Área ID
        td= item.area_id.name_area
      tr
        th Salario mensual
        td= item.monthly_salary
      tr
        th Estado
        td= item.status
      tr
        th Fecha de creación
        td= item.created_at
      tr
        th Última actualización
        td= item.updated_at

  .mt-3
    a.btn.btn-gray.me-2(href="/users") Volver a la lista
